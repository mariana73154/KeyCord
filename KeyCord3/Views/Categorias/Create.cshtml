@model KeyCord3.Models.Categorium

@{
    ViewData["Title"] = "Create";
}

<div class="principal_center_edit">
    <h1>Adicionar Categoria</h1>
    <br />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NomeCat" class="control-label"></label>
                    <input asp-for="NomeCat" class="form-control" />
                    <span asp-validation-for="NomeCat" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DescCat" class="control-label"></label>
                    <input asp-for="DescCat" class="form-control" />
                    <span asp-validation-for="DescCat" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Adicionar" class="btn btn-primary" />
                </div>
            </form>
            <br/>
            <a class="btn edit" asp-action="ListCategorias" asp-controller="Manutencao">Voltar</a>
        </div>
    </div>
</div>